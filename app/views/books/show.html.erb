<main>
  <p id="notice">You have created book successfully.</p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
	              <th>name</th>
	              <th><%= @user.name %></th>
              </tr>
              <tr>
	              <th>introduction</th>
	              <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_50693" href="/users/50693/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <form action="/books" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="mP1yUFLXfWhlY478eDJnixhE1jxFKaY7Da7myIoNpfoEqVzZCw0bRrYiPxpWHD_0xeiF__PSCe2HSlB5tkybkw" autocomplete="off">
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
      </form>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
</main>